<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reservation.ReservationActivity">

    <!-- 장소 선택 스피너 -->
    <Spinner
        android:id="@+id/spinnerPlace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 날짜 선택 -->
    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="날짜를 선택하세요"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/spinnerPlace"
        app:layout_constraintStart_toStartOf="@id/spinnerPlace"
        app:layout_constraintTop_toBottomOf="@id/spinnerPlace" />

    <!-- 선택된 시간 표시 -->
    <TextView
        android:id="@+id/tvSelectedTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:text="선택된 시간: 없음"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/tvSelectedDate"
        app:layout_constraintStart_toStartOf="@id/tvSelectedDate"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedDate" />

    <!-- 시간 선택 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#EFEFEF"
        app:layout_constraintEnd_toEndOf="@id/tvSelectedTime"
        app:layout_constraintStart_toStartOf="@id/tvSelectedTime"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedTime" />

    <!-- 예약하기 버튼 -->
    <Button
        android:id="@+id/btnReserve"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:text="예약하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rvTime"
        app:layout_constraintStart_toStartOf="@id/rvTime"
        app:layout_constraintTop_toBottomOf="@id/rvTime" />

</androidx.constraintlayout.widget.ConstraintLayout>
